extends layout

block content
  .container
    h1 Login
    p.lead Find your User Id and Api Token from the 
      a(href="https://habitica.com/#/options/settings/api") Habitica api page.
    br
    form( 
      role='form'
      action="/users/login"
      method="post"
      style='max-width: 300px;')
      .form-group
        input.form-control(
          type='text'
          name="userId"
          placeholder='User-Id')
      .form-group
        input.form-control(
          type='password'
          name="apiKey"
          placeholder='Api-Key')
      button.btn.btn-default(type='submit') Log In
      | &nbsp;
      a(href='/')
        button.btn.btn-primary(type="button") Cancel
