extends layout

block content
  .container
    h1 Register
    p.lead Find your User Id and Api Token from the 
      a(href="https://habitica.com/#/options/settings/api") Habitica api page.
    br
    form(
      role='form', 
      action="/users/register"
      method="post"
      style='max-width: 300px;')
      .form-group
        input.form-control(
          type='text'
          name="userId"
          value=userId
          placeholder=userId)
      .form-group
        input.form-control(
          type='text'
          name="apiKey"
          value=apiKey
          placeholder=apiKey)
      button.btn.btn-default(type='submit') Submit
      &nbsp;
      a(href='/')
        button.btn.btn-primary(type="button") Cancel
